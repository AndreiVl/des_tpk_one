mixin btn(data)
	if data.type && data.type === 'link'
		- var link = '#'
		if data.url
			- var link = data.url

		a.btn(href=link, class!=attributes.class, id!=attributes.id, role="button", rel!=data.rel)
			if data.icon_l
				+icon(data.icon_l)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				+icon(data.icon_r, data.icon_width)
	else
		- var type = 'button'
		if data.type && data.type === 'submit'
			- var type = 'submit'

		//- button.btn&attributes(attributes)
		button.btn&attributes(attributes)(class!=attributes.class, id!=attributes.id, type=type, name=data.name)
			if data.icon_l
				+icon(data.icon_l, data.icon_width)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				+icon(data.icon_r, data.icon_width)